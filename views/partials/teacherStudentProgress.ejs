<div class="custom-card w-100">
    <div class="custom-card-header">
        Student Progress
    </div>
    <h4 class="mt-3">Students' Status</h4>
    <div class="table-responsive-md">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Student Name</th>
                    <th scope="col">Score</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                    <% for( let i = 0; i < studentsDetails.length; i++ ) { %>
                        <tr>
                            <td scope="row"><%= i + 1 %></td>
                            <td><%= studentsDetails[i].student.user.name %></td>
                            <td><span class="h5"><%= studentsDetails[i].score %></span> / <%= total %></td>
                            <td><%= studentsDetails[i].ontime ? 'On time' : 'Late' %></td>
                        </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</div>